{
	"servers": {
		"mongodb": {
		"command": "docker",
		"args": [
			"run",
			"--rm",
			"-i",
			"--network", "host",
			"node:20-alpine",
			"sh", "-c",
			"npx -y mongodb-mcp-server"
		],
		"env": {
			"MDB_MCP_CONNECTION_STRING": "mongodb://host.docker.internal:27017/?directConnection=true"
		},
		"type": "stdio"
		}
	},
	"inputs": [
		{
			"id": "connection_string",
			"type": "promptString",
			"description": "MongoDB connection string",
			"default": "mongodb://host.docker.internal:27017/?directConnection=true"
		}
	]
}